    <script>
        // --- DATA ---
        const coursesData = [
            { code: 'ENGL101', title_ar: 'اللغة الإنجليزية 101', title_en: 'English 101', category: 'اللغات', icon: '📖',
              goal: 'تطوير مهارات القراءة والكتابة الأكاديمية والتواصل الشفهي لدى طلاب السنة الأولى بالجامعة.',
              ilos: [
                'قراءة وفهم النصوص الأكاديمية الأساسية.',
                'كتابة مقالات أكاديمية قصيرة بشكل واضح ومنظم.',
                'تطبيق قواعد اللغة والنحو في سياق أكاديمي.',
                'إجراء عروض تقديمية قصيرة باللغة الإنجليزية.'
              ],
              units: [
                { week: 1, topic: 'مقدمة في الكتابة الأكاديمية', activities: 'تمرين: كتابة فقرة تعريفية شخصية' },
